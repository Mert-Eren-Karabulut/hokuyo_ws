<?xml version="1.0"?>
<launch>
    <!-- Launch the parametric scanning velocity publisher -->
    <node name="vel_publisher" pkg="hokuyo_go" type="vel_publisher" output="screen">
        <!-- Scanning parameters -->
        <param name="target_velocity" value="1.0" />          <!-- Target velocity in rad/s -->
        <param name="yaw_limit_deg" value="60.0" />           <!-- Yaw limit in degrees (±60°) -->
        <param name="tilt_limit_deg" value="45.0" />          <!-- Tilt limit in degrees (±45°) -->
    </node>
</launch>